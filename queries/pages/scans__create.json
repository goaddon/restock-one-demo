{
  "suppliers": {
    "klass": "suppliers",
    "query": {
      "company_id": "{{ company_id }}",
      "_id": "{{ _id }}"
    },
    "projection": {
      "_id": 1,
      "name": 1
    }
  },
  "items": {
    "klass": "items",
    "query": {
      "company_id": "{{ company_id }}",
      "supplier_id": "{{ supplier_id }}",
      "barcode": "{{ barcode }}"
    },
    "projection": {
      "_id": 1,
      "name": 1,
      "ordered": 1
    }
  },
  "variants": {
    "klass": "variants",
    "query": {
      "company_id": "{{ company_id }}",
      "barcode": "{{ barcode }}"
    },
    "projection": {
      "_id": 1,
      "stock": 1
    }
  },
  "update_item": {
    "klass": "items",
    "query": {
      "company_id": "{{ company_id }}",
      "_id": "{{ _id }}"
    },
    "document": {
      "$set": {
        "ordered": "{{ ordered }}"
      }
    }
  }
}