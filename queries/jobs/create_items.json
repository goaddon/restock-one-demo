{
  "variants": {
    "klass": "variants",
    "query": {
      "company_id": "{{ company_id }}",
      "stock": {
        "$lt": 0
      },
      "barcode": {
        "$ne": null
      }
    },
    "pagination": {
      "page": 0,
      "per_page": 50
    },
    "projection": {
      "_id": 1,
      "barcode": 1
    }
  },
  "suppliers": {
    "klass": "suppliers",
    "query": {
      "company_id": "{{ company_id }}",
      "email": {"$ne": null}
    },
    "projection": {
      "_id": 1,
      "name": 1,
      "url": 1,
      "email": 1
    }
  },
  "items": {
    "klass": "items",
    "query": {
      "company_id": "{{ company_id }}",
      "supplier_id": "{{ supplier_id }}"
    },
    "projection": {
      "_id": 1,
      "sku": 1,
      "name": 1,
      "stock": 1,
      "price": 1
    }
  },
  "create_item": {
    "klass": "items",
    "document": {
      "company_id": "{{ company_id }}",
      "sku": "{{ sku }}",
      "name": "{{ name }}",
      "barcode": "{{ barcode }}",
      "stock": "{{ stock }}",
      "price": "{{ price }}",
      "ordered": 0,
      "supplier_id": "{{ supplier_id }}"
    }
  },
  "update_item": {
    "klass": "items",
    "query": {
      "company_id": "{{ company_id }}",
      "_id": "{{ _id }}"
    },
    "document": {
      "$set": {
        "name": "{{ name }}",
        "barcode": "{{ barcode }}",
        "stock": "{{ stock }}",
        "price": "{{ price }}"
      }
    }
  },
  "soft_delete_item": {
    "klass": "items",
    "query": {
      "company_id": "{{ company_id }}",
      "_id": "{{ _id }}"
    },
    "document": {
      "$set": {
        "stock": null
      }
    }
  }
}